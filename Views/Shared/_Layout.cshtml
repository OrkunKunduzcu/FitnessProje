<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GYM-PRO</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    </head>
<body class="d-flex flex-column min-vh-100">
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-warning mb-0">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center fw-bold" asp-area="" asp-controller="Home" asp-action="Index" style="color:var(--primary-yellow) !important; letter-spacing: 2px;">
                    <span style="font-size: 1.8rem; margin-right: 10px;">⚡</span> GYM-PRO
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase" asp-controller="Home" asp-action="Index">ANA SAYFA</a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-uppercase" asp-controller="Ai" asp-action="Index">AI ANTRENÖR</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-uppercase" asp-controller="Appointment" asp-action="Index">RANDEVULAR</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link btn btn-outline-warning text-warning fw-bold px-3 ms-2" style="border:1px solid #ffc107;" asp-controller="Admin" asp-action="Index">
                                    ⚙️ YÖNETİM PANELİ
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white fw-bold" href="#" role="button" data-bs-toggle="dropdown">
                                    👤 @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark shadow border-warning">
                                    
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger fw-bold">🚪 Çıkış Yap</button>
                                        </form>
                                    </li>

                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm ms-2 text-dark fw-bold px-3" asp-controller="Account" asp-action="Register">KAYIT OL</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0 flex-grow-1">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-black text-white border-top border-secondary mt-auto py-4">
        <div class="container text-center">
            <div class="mb-3">
                <span style="font-size: 1.5rem; color:var(--primary-yellow);">⚡ GYM-PRO</span>
            </div>
            <p class="text-muted mb-0">&copy; 2025 - FitnessProje - Tüm Hakları Saklıdır.</p>
            <small class="text-muted">Sakarya Üniversitesi Web Programlama Projesi</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 
